<h1>Media Items</h1>

<%= link_to 'Add New Item', new_media_item_path,
                            class: 'btn btn-default btn-sm' %>

<div class="container">
  <h3>Search</h3>
  <%= render "search_form" %>
</div>

<h3>Items:</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
  <% @media_items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.user.name %></td>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Delete', media_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
