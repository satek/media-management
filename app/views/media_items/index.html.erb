<h1>Your Media Items</h1>

<%= link_to 'Add New Item', new_media_item_path,
                        class: 'btn btn-default btn-lg' %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @media_items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Edit', edit_media_item_path(item) %></td>
      <td><%= link_to 'Destroy', media_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
