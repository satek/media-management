<h1>Video Media Item</h1>

<ul>
  <li><strong>Owner:</strong><%= @item.user.name %></li>
  <li><strong>Title:</strong><%= @item.title %></li>
  <li><strong>Description:</strong><%= @item.description %></li>
  <li><strong>Created at:</strong><%= @item.created_at %></li>
  <li><strong>Updated at:</strong><%= @item.updated_at %></li>
</ul>

<% if @item.link %>
  <h3>View video <%= @item.link.url %></h3>

  <embed width="420" height="315" src="<%= @item.link.url %>">
<% end %>
